<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imageProduct"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bracelet_1" />

            <ImageView
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_cart"
                android:visibility="gone"
                app:tint="#000000" />

            <TextView
                android:id="@+id/titleProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/addToCart"
                android:layout_toEndOf="@+id/imageProduct"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Name Product"
                android:textColor="#272727"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/descProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/priceProduct"
                android:layout_below="@+id/titleProduct"
                android:layout_toEndOf="@+id/imageProduct"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="1dp"
                android:text="Name Product"
                android:textColor="#707070"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/priceProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/imageProduct"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Price: $5000"
                android:textColor="#8BC34A"
                android:textSize="10sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>